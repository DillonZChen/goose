Bootstrap: docker
From: nvidia/cuda:12.3.2-runtime-ubuntu22.04

%files
    enums /goose/
    learning /goose/
    planning /goose/
    util /goose/
    wlplan /goose/

    *.py /goose/
    build /goose/
    requirements.txt /goose/

%post
    # Install all necessary dependencies.
    apt-get update

    export DEBIAN_FRONTEND=noninteractive

    # Python packages
    apt-get install -y --no-install-recommends \
        python2 \
        python3.10 \
        python3-tk \
        python3-pip \
        python3-dev \
        python3-distutils \
        python3-setuptools

    # C++ packages
    apt-get install -y --no-install-recommends \
        build-essential \
        g++ \
        cmake \
        libboost-all-dev \
        git

    # Move into repo and build
    cd /goose

    # Python dependencies
    pip3 install -r requirements.txt

    # Torch dependencies
    pip3 install torch --index-url https://download.pytorch.org/whl/cu121
    pip3 install torch_geometric
    pip3 install pyg_lib torch_scatter torch_sparse torch_cluster torch_spline_conv -f https://data.pyg.org/whl/torch-2.4.0+cu121.html

    # Clear build directories
    rm -rf wlplan/build
    rm -rf planning/ext/*/builds
    rm -rf planning/ext/succgen/build

    # Build necessary components
    ./build wlplan
    ./build succgen
    ./build fd

    # Clean up
    apt-get clean
    rm -rf __pycache__/
    rm -rf /var/lib/apt/lists/*
    rm -rf wlplan/
