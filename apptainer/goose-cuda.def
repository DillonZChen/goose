Bootstrap: localimage
From: apptainer/docker-ubuntu22_04.sif

%files
    enums /goose/
    learning /goose/
    planning /goose/
    util /goose/
    wlplan /goose/

    *.py /goose/
    build /goose/
    requirements.txt /goose/

%post
    # Move into repo and build
    cd /goose

    # Python dependencies
    pip3 install -r requirements.txt

    # Torch dependencies
    pip3 install torch --index-url https://download.pytorch.org/whl/cu121
    pip3 install torch_geometric
    pip3 install pyg_lib torch_scatter torch_sparse torch_cluster torch_spline_conv -f https://data.pyg.org/whl/torch-2.4.0+cu121.html

    # Clear build directories
    rm -rf wlplan/build
    rm -rf planning/ext/*/builds
    rm -rf planning/ext/succgen/build

    # Build necessary components
    ./build wlplan
    ./build succgen
    ./build fd

    # Clean up
    apt-get clean
    rm -rf __pycache__/
    rm -rf /var/lib/apt/lists/*
    rm -rf wlplan/


%runscript
    #!/bin/bash

    if [ "$#" -lt 1 ]; then
        echo "Usage: ./goose.sif <train|plan> <args>"
        exit 1
    fi

    command=$1
    shift

    if [ "$command" = "plan" ]; then
        python3.10 /goose/plan.py "$@"
    elif [ "$command" = "train" ]; then
        python3.10 /goose/train.py "$@"
    else
        echo "Usage: ./goose.sif <train|plan> <args>"
        exit 1
    fi

%labels
    Name        goose
    Description GOOSE: Graphs Optimised fOr Search Evaluation.
    Authors     Dillon Chen <dillon.chen1@gmail.com>
