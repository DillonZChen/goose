Bootstrap: docker
From: ubuntu:22.04

%files
    learning /goose/
    planning /goose/
    util /goose/
    wlplan /goose/

    *.py /goose/
    build /goose/
    requirements.txt /goose/

%post
    # Install all necessary dependencies.
    apt-get update

    export DEBIAN_FRONTEND=noninteractive

    # Python packages
    apt-get install -y --no-install-recommends \
        python2 \
        python3.10 \
        python3-tk \
        python3-pip \
        python3-dev \
        python3-distutils \
        python3-setuptools

    # C++ packages
    apt-get install -y --no-install-recommends \
        build-essential \
        g++ \
        cmake \
        libboost-all-dev \
        git

    # Move into repo and build
    cd /goose

    # Python dependencies
    pip3 install -r requirements.txt

    # Clear build directories
    rm -rf wlplan/build
    rm -rf planning/ext/*/builds
    rm -rf planning/ext/succgen/build

    # Build all components
    ./build

    # Clean up
    apt-get clean
    rm -rf __pycache__/
    rm -rf /var/lib/apt/lists/*
    rm -rf wlplan/
