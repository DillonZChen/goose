Bootstrap: docker
From: ubuntu:22.04

%post
    # Install all necessary dependencies.
    apt-get update

    export DEBIAN_FRONTEND=noninteractive

    # Python packages
    apt-get install -y --no-install-recommends \
        python2 \
        python3.10 \
        python3-tk \
        python3-pip \
        python3-dev \
        python3-distutils \
        python3-setuptools

    # C++ packages
    apt-get install -y --no-install-recommends \
        build-essential \
        g++ \
        cmake \
        libboost-all-dev \
        git

    # Clean up
    apt-get clean
    rm -rf /var/lib/apt/lists/*
